                    }

                    GroupBox {
                        title: "Delay Selection";

                        VerticalBox {
                            padding: 12px;
                            spacing: 8px;

                            HorizontalLayout {
                                spacing: 8px;
                                Text {
                                    text: "Selection Mode:";
                                    vertical-alignment: center;
                                    min-width: 140px;
                                }
                                ComboBox {
                                    model: ["Mode (Most Common)", "Mode (Clustered)", "Mode (Early Cluster)", "First Stable", "Average"];
                                    current-index <=> delay-selection-mode-index;
                                    horizontal-stretch: 1;
                                }
