// SourceGroup - Collapsible group of tracks from a single source.
// Clean compact layout.

import { VerticalBox, HorizontalBox, Button, GroupBox } from "std-widgets.slint";
import { TrackListItem, TrackWidgetData } from "track_widget.slint";

export component SourceGroup inherits Rectangle {
    in property <string> title: "Source";
    in property <string> source-key: "";
    in property <[TrackWidgetData]> tracks: [];
    in property <bool> show-configure-button: true;
    in property <[bool]> blocked-tracks: [];
    in-out property <bool> expanded: true;

    callback track-double-clicked(int);
    callback track-context-menu(int);
    callback configure-correlation();

    background: #2a2a2a;
    border-radius: 4px;

    VerticalBox {
        padding: 0px;
        spacing: 0px;

        // Header
        HorizontalBox {
            padding: 6px;
            spacing: 6px;

            // Collapse toggle
            Rectangle {
                width: 18px;
                height: 18px;
                background: collapse-touch.has-hover ? #3a3a3a : transparent;
                border-radius: 3px;

                Text {
                    text: root.expanded ? "▼" : "►";
                    font-size: 10px;
                    color: #888888;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }

                collapse-touch := TouchArea {
                    clicked => { root.expanded = !root.expanded; }
                }
            }

            // Title
            Text {
                text: root.title;
                font-weight: 600;
                font-size: 13px;
                horizontal-stretch: 1;
                vertical-alignment: center;
            }

            // Track count
            Text {
                text: "(" + tracks.length + ")";
                font-size: 11px;
                color: #666666;
                vertical-alignment: center;
            }

            // Configure button
            if root.show-configure-button && root.source-key != "Source 1" && root.source-key != "External": Button {
                text: "Configure...";
                clicked => { root.configure-correlation(); }
            }
        }

        // Content
        if root.expanded: VerticalBox {
            padding-left: 10px;
            padding-right: 6px;
            padding-bottom: 6px;
            spacing: 2px;

            for track[idx] in tracks: TrackListItem {
                data: track;
                is-blocked: idx < blocked-tracks.length ? blocked-tracks[idx] : false;

                double-clicked => { root.track-double-clicked(track.id); }
                context-menu-requested => { root.track-context-menu(track.id); }
            }

            if tracks.length == 0: Text {
                text: "No tracks";
                font-size: 11px;
                color: #666666;
                font-italic: true;
            }
        }
    }
}
