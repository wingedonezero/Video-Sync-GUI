// SourceGroup - Group of tracks from a single source.
// Dense Qt-style flat list - NOT accordion/card UI.

import { VerticalBox, HorizontalBox, Button, GroupBox } from "std-widgets.slint";
import { TrackWidgetData } from "track_widget.slint";

// Single-line track item (~20px) - flat style
component SourceTrackItem inherits Rectangle {
    in property <TrackWidgetData> data;
    in property <bool> is-blocked: false;

    callback double-clicked();
    callback context-menu-requested();

    height: 20px;
    // Flat style - transparent bg, hover highlight only
    background: touch.has-hover ? #2d3236 : transparent;
    opacity: is-blocked ? 0.4 : 1.0;

    touch := TouchArea {
        mouse-cursor: is-blocked ? not-allowed : pointer;

        double-clicked => {
            if (!root.is-blocked) { root.double-clicked(); }
        }

        pointer-event(event) => {
            if (event.button == PointerEventButton.right && event.kind == PointerEventKind.up) {
                root.context-menu-requested();
            }
        }
    }

    HorizontalLayout {
        padding-left: 4px;
        padding-right: 4px;

        // Track type indicator bar
        Rectangle {
            width: 3px;
            background: data.track-type == "video" ? #8855dd :
                        data.track-type == "audio" ? #55aa55 : #ddaa55;
        }

        // Single-line text, elided
        Text {
            text: data.summary;
            font-size: 11px;
            color: root.is-blocked ? #555555 : #d0d0d0;
            vertical-alignment: center;
            overflow: elide;
            horizontal-stretch: 1;
        }
    }
}

export component SourceGroup inherits Rectangle {
    in property <string> title: "Source";
    in property <string> source-key: "";
    in property <[TrackWidgetData]> tracks: [];
    in property <bool> show-configure-button: true;
    in property <[bool]> blocked-tracks: [];
    // Always expanded - no accordion
    in-out property <bool> expanded: true;

    callback track-double-clicked(int);
    callback track-context-menu(int);
    callback configure-correlation();

    // Flat style - no rounded corners
    background: transparent;

    VerticalLayout {
        padding: 0px;
        spacing: 0px;

        // Header with divider
        HorizontalLayout {
            height: 22px;
            padding-left: 2px;
            padding-right: 2px;
            spacing: 4px;

            // Title (bold, slightly brighter)
            Text {
                text: root.title;
                font-weight: 600;
                font-size: 11px;
                color: #d0d0d0;
                horizontal-stretch: 1;
                vertical-alignment: center;
            }

            // Track count
            Text {
                text: "(" + tracks.length + ")";
                font-size: 10px;
                color: #666666;
                vertical-alignment: center;
            }

            // Configure button (small)
            if root.show-configure-button && root.source-key != "Source 1" && root.source-key != "External": Button {
                text: "Configure...";
                height: 18px;
                clicked => { root.configure-correlation(); }
            }
        }

        // Divider line under header
        Rectangle { height: 1px; background: #3a3a3a; }

        // Track list - always visible, no collapse
        VerticalLayout {
            padding: 0px;
            spacing: 0px;

            for track[idx] in tracks: SourceTrackItem {
                data: track;
                is-blocked: idx < blocked-tracks.length ? blocked-tracks[idx] : false;

                double-clicked => { root.track-double-clicked(track.id); }
                context-menu-requested => { root.track-context-menu(track.id); }
            }

            if tracks.length == 0: Text {
                text: "No tracks";
                font-size: 10px;
                color: #555555;
                font-italic: true;
                horizontal-alignment: center;
                height: 20px;
                vertical-alignment: center;
            }
        }

        // Bottom spacing
        Rectangle { height: 4px; }
    }
}
