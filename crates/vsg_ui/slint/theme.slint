// Shared theme constants for consistent styling across all windows and components.
// Import this file to use the Theme global.

export global Theme {
    // Colors - General
    out property <color> background: #1e1e1e;
    out property <color> surface: #2d2d2d;
    out property <color> surface-variant: #3a3a3a;
    out property <color> border: #555555;
    out property <color> text-primary: #f5f5f5;
    out property <color> text-secondary: #aaaaaa;
    out property <color> text-muted: #666666;

    // Colors - Semantic
    out property <color> accent: #4a9eff;
    out property <color> accent-hover: #6ab0ff;
    out property <color> success: #228b22;
    out property <color> warning: #e0a800;
    out property <color> error: #cc0000;
    out property <color> info: #5599dd;

    // Colors - Track types (for visual distinction)
    out property <color> video-track: #8855dd;
    out property <color> audio-track: #55aa55;
    out property <color> subtitle-track: #ddaa55;

    // Spacing
    out property <length> spacing-xs: 4px;
    out property <length> spacing-sm: 8px;
    out property <length> spacing-md: 12px;
    out property <length> spacing-lg: 16px;
    out property <length> spacing-xl: 24px;

    // Padding (same scale as spacing for consistency)
    out property <length> padding-xs: 4px;
    out property <length> padding-sm: 8px;
    out property <length> padding-md: 12px;
    out property <length> padding-lg: 16px;
    out property <length> padding-xl: 24px;

    // Border radius
    out property <length> radius-sm: 4px;
    out property <length> radius-md: 6px;
    out property <length> radius-lg: 8px;

    // Font sizes
    out property <length> font-xs: 10px;
    out property <length> font-sm: 12px;
    out property <length> font-md: 13px;
    out property <length> font-lg: 14px;
    out property <length> font-xl: 16px;
    out property <length> font-2xl: 20px;

    // Component sizes
    out property <length> button-height: 32px;
    out property <length> input-height: 28px;
    out property <length> track-widget-height: 56px;
    out property <length> icon-size-sm: 16px;
    out property <length> icon-size-md: 20px;

    // Shadow
    out property <length> shadow-blur: 12px;
    out property <color> shadow-color: #000000a0;
}
